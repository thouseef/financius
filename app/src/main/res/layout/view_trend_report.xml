<com.mvcoding.expensius.feature.reports.trends.TrendsReportView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trendsReportView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="112dp" />

    <TextView
        android:id="@+id/thisPeriodAmountTextView"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:background="?colorOverlay"
        android:gravity="end|center_vertical"
        android:paddingBottom="@dimen/grid_1x"
        android:paddingLeft="@dimen/keyline"
        android:paddingRight="@dimen/keyline"
        android:textAppearance="@style/Text.Display1" />

</com.mvcoding.expensius.feature.reports.trends.TrendsReportView>