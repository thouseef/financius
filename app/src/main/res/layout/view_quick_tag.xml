<com.mvcoding.expensius.feature.tag.QuickTagView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/keyline_quarter"
    android:layout_marginLeft="@dimen/keyline_quarter"
    android:layout_marginRight="@dimen/keyline_quarter"
    android:layout_marginTop="@dimen/keyline_quarter">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
