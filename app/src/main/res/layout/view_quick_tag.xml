        android:maxLines="1"
        android:paddingBottom="@dimen/space_normal"
        android:paddingLeft="@dimen/keyline"
        android:paddingRight="@dimen/keyline"
        android:paddingTop="@dimen/space_normal"
        android:textAppearance="@style/Text.Tag.Button" />

