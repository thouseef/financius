<com.mvcoding.expensius.feature.filter.FilterView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <ImageButton
        android:id="@+id/previousIntervalImageButton"
        style="@style/Button.Flat.Borderless"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_action_previous" />

    <TextView
        android:id="@+id/intervalTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/Text.Title"
        tools:text="April 2017" />

    <ImageButton
        android:id="@+id/nextIntervalImageButton"
        style="@style/Button.Flat.Borderless"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_action_next" />

</com.mvcoding.expensius.feature.filter.FilterView>