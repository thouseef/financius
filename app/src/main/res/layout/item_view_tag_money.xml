<com.mvcoding.expensius.feature.reports.tags.TagMoneyItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RecyclerViewItem"
    android:background="@null">

    <ImageView
        android:id="@+id/colorImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/color"
        android:elevation="@dimen/elevation_card"
        android:src="@drawable/oval"
        tools:ignore="UnusedAttribute"
        tools:tint="#ffcc00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/keyline_content_minus_keyline"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amountTextView"
            style="@style/TextView"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/Text.Money"
            tools:text="$ 258.36" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/amountTextView"
            android:textAppearance="@style/Text.Tag.Button"
            tools:text="Essential" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="@dimen/grid_quarter"
            app:rcBackgroundColor="?android:windowBackground"
            app:rcRadius="2dp" />

    </RelativeLayout>

</com.mvcoding.expensius.feature.reports.tags.TagMoneyItemView>